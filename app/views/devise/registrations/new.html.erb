
<div class="row signin_font">

  <div class="col-md-8">
  <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="signup">

        <div class="row">  
            <div class="col-md-8 <%= "alert alert-danger" if !devise_error_messages!.empty? %>">
                <%= devise_error_messages! %>
            </div>
        </div>  

        <div class="clearfix"></div>

        <div class="row">
          <div class="col-md-4"><%= f.label :email %> </div>
          <div class="col-md-7"> <%= f.email_field :email, autofocus: true %></div>
        </div>  

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-4"><%= f.label :name %></div>
            <div class="col-md-7"><%= f.text_field :name %></div>
        </div>

        <div class="row">
            <div class="col-md-4"> <%= f.label :nick_name %></div>
            <div class="col-md-7"><%= f.text_field :nickname %></div>
        </div>


        <div class="row">
            <div class="col-md-4"><%= f.label :dob %></div>
            <div class="col-md-7"><input type="date" name="user[dob]" id="user_dob"> </div>
        </div>

        <div class="row">
            <div class="col-md-4"><%= f.label :password %> </div>
            <div class="col-md-7"><%= f.password_field :password, autocomplete: "off" %></div>
        </div>

        <div class="row">
            <div class="col-md-4"><%= f.label :password_confirmation %></div>
            <div class="col-md-7"><%= f.password_field :password_confirmation, autocomplete: "off" %></div>
        </div>

        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-7"> <%= f.submit "Sign up", :class => "btn btn-info" %> </div>
        </div>

      </div>  
    <% end %>
  </div>    

  <div class="col-md-4 right_of_signup">
    <div class="row">
      <div class="col-md-8">
          Already a member? Sign in here. <%= render "devise/shared/links" %>
      </div>    
    </div>
  </div>  

</div>

