<% if @student %>
			<!-- Sub Navigation Bar  Start-->		
			<ul class="nav nav-tabs sub-nav-bar" role="tablist">
				<% base_url = '/users/'+current_user.id.to_s+'/courses/enrolled' %>
			  <li class="<%= @active %>ctive"><a href="<%= base_url %>/current">Current</a></li>
			  <li class="a<%= @active %>tive"><a href="<%= base_url %>/completed">Completed</a></li>
			  <li class="ac<%= @active %>ive"><a href="<%= base_url %>/dropped">Dropped</a></li>
			</ul>
			<!-- Sub Navigation Bar end -->
<% elsif @mentor %>
			<!-- Sub Navigation Bar  Start-->		
			<ul class="nav nav-tabs sub-nav-bar" role="tablist">
				<li class="dropdown <%= @active %>ctive">
			        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
			          	Study Materials
			          	<span class="caret"></span>
			        </a>
			        <ul class="dropdown-menu" role="menu">
			            <li><%= link_to "My Materials", user_study_materials_path(current_user) %></li>
			            <li><%= link_to "All Materials", study_materials_path %></li>
			            <li><%= link_to "Add New", new_user_study_material_path(current_user) %></li>
			        </ul>
			    </li>

			  	<li class="a<%= @active %>tive">
			  		<a href="#" class="dropdown-toggle" data-toggle="dropdown">
			          	Courses
			          	<span class="caret"></span>
			        </a>
			        <ul class="dropdown-menu" role="menu">
			            <li><%= link_to "My Courses", user_courses_path(current_user) %></li>
			            <li><%= link_to "All Courses", courses_path %></li>
			            <li><%= link_to "Add New", new_user_course_path(current_user) %></li>
			        </ul>
			  	</li>
			  	<li class="ac<%= @active %>ive"><a href="/users/<%= current_user.id %>/students">Students</a></li>
			</ul>
			<!-- Sub Navigation Bar end -->
<% end %>

<br/ >

<% if @student || @mentor %>
	<ol class="breadcrumb">
		<% url = request.fullpath.split("/") %>
		<% url.each do |part| %>
			<li> <%= part  %> </li>
		<% end %>
	</ol>
<% end %>