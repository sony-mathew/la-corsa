
<div class="course-status-bar">
	<div class="panel panel-default">
		
		<div class="row">
			<div class="col-md-4">
				<% lp = @course.learning_processes.where("student = "+current_user.id.to_s) %>
				<% if !lp.empty? %>
					<% if (lp[0].pursuing? or lp[0].suggested?) %>
						<span class="text">Completion Status &nbsp;&nbsp;&nbsp;</span>
						<span class="status"> 
							<% per = ((lp[0].last_material.to_f/@course.course_materials_count).round(2)*100).to_i %>
							<%= per == 0 ? '&nbsp;'.html_safe+per.to_s : per %> %
						</span>	
					<% else %>
						<% alert_type = lp[0].dropped? ? "alert-danger" : "alert-success"  %>
						<% if lp[0].complete? and !lp[0].rating_flag? %>
							<span class="rating"> 
							Rating &nbsp; <select name="rating" class="rating-input" data-course="<%= @course.id %>">
												<option>1</option>
												<option>2</option>
												<option>3</option>
												<option>4</option>
												<option>5</option>
									  	  </select>
							</span> &nbsp;&nbsp;&nbsp;&nbsp;
							<button type="button" class="btn btn-info rate-button">Rate Course</button>
						<% else %>
							<div class="alert <%= alert_type %>"> You have <%= lp[0].status_name %> this course. </div>	
						<% end %>
					<% end %>	 
				<% else %>
					<button type="button" class="btn btn-success enroll-me" data-course="<%= @course.id %>">Enroll me for this course</button>
				<% end %>	
			</div>
			<div class="col-md-2">
				<% if !lp.empty? %>
					<% if (lp[0].pursuing? or lp[0].suggested? ) %>
						<button type="button" class="btn btn-danger drop-course" data-lp="<%= lp[0].id %>">Drop course</button>
					<% elsif lp[0].dropped? %>
						<button type="button" class="btn btn-success activate-course" data-lp="<%= lp[0].id %>">Activate course</button>
					<% elsif lp[0].complete? %>
						<span class="status"> 
							100%
						</span>		
					<% end %>
				<% end %>	
			</div>
			<div class="col-md-6">
				<span class="suggest-get">
					<form method="get" action="" id="target">
						<input type="text" name="suggest" placeholder="Comma seperated emails" class="suggest-input" data-course="<%= @course.id %>">
					</form>
				</span>
				<span>
					<button type="button" class="btn btn-success suggest">Suggest to friends</button>
				</span>
			</div>
		</div>
			
	</div>	
</div>